{
  "name": "accessibility-analyzer-backend",
  "version": "1.0.0",
  "description": "Express.js backend for Accessibility Analyzer Tool",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "postinstall": "npx puppeteer browsers install chrome || echo 'Chrome installation skipped or failed'",
    "install-chrome": "npx puppeteer browsers install chrome"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "pa11y": "^9.0.0",
    "puppeteer": "^24.34.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/pa11y": "^5.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^3.0.11",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
